<div class="container">
  <%= form_for @todo, :html => {:class => "form-horizontal center"} do |f| %>
  <div class="form-group">
    <%= f.label :title, "項目", class: "col-md-3 control-label" %>
    <div class="col-md-7">
      <%= f.text_field :title, class: "form-control", readonly: true  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :notes, "內容", class: "col-md-3 control-label" %>
    <div class="col-md-7">
      <%= f.text_area :notes, class: "form-control", readonly: true, :rows => 5 %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :due_date, "截止日", class: "col-md-3 control-label" %>
    <div class="col-md-7">
      <%= f.text_field :due_date, class: "form-control", readonly: true  %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-3">
      </div>
    <div class="col-md-7">
      
   <%= link_to "返回...", :back, class: "pull-right"%>
   </div>
   </div>
  <% end %>
</div>
